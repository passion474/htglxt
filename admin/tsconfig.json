{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@service/*": ["../packages/service/modules/*"],
      "@type/*": ["../packages/types/modules/*"],
      "@auth/*": ["../packages/tokens/auth/*"],
      "@enums/*": ["../packages/tokens/enums/*"]
    }
  },
  "include": [
    "tests/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "typings",
    "build",
    "config",
    "mock/**/*.ts",
    "vite.config.ts"
  ],
  "exclude": ["**/node_modules/**", "**/dist/**", "**/*.js"]
}
