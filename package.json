{
  "name": "@admin/root",
  "private": true,
  "version": "2.1.3",
  "author": {
    "name": "xueyi",
    "url": "https://gitee.com/xueyitiantang/MultiSaas-UI"
  },
  "scripts": {
    "bootstrap": "pnpm install",
    "dev": "pnpm run -C admin dev",
    "dev:all": "turbo run dev --scope=@admin/**",
    "build": "turbo run build --scope=@admin/**",
    "log": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "clean": "turbo run clean && rimraf node_modules",
    "lint:eslint": "eslint --cache --max-warnings 0  \"{packages,admin,server}/**/*.{vue,ts,tsx}\" --fix",
    "lint:prettier": "prettier --write  \"{packages,admin}/**/*.{js,json,ts,tsx,css,less,scss,vue,html,md}\"",
    "lint:stylelint": "stylelint --fix \"**/*.{vue,less,postcss,css,scss}\"",
    "reinstall": "turbo run clean && rimraf pnpm-lock.yaml && rimraf node_modules && npm run bootstrap",
    "prepare": "husky install",
    "test:coverage": "c8 vitest --coverage",
    "test:watch": "vitest -w",
    "test": "vitest",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^8.2.0",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "c8": "^7.11.0",
    "commitizen": "^4.2.4",
    "conventional-changelog-cli": "^2.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.5.0",
    "esno": "^0.14.1",
    "fs-extra": "^10.0.1",
    "husky": "^7.0.4",
    "inquirer": "^8.2.1",
    "jsdom": "^19.0.0",
    "lint-staged": "12.3.1",
    "postcss": "^8.4.8",
    "postcss-html": "^1.3.0",
    "postcss-less": "^6.0.0",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.1",
    "stylelint": "^14.5.3",
    "stylelint-config-html": "^1.0.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^6.0.0",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-order": "^5.0.0",
    "ts-node": "^10.7.0",
    "turbo": "^1.1.6",
    "typescript": "^4.6.2",
    "vitest": "^0.2.8",
    "vue-eslint-parser": "^8.3.0"
  },
  "resolutions": {
    "bin-wrapper": "npm:bin-wrapper-china",
    "gifsicle": "5.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitee.com/xueyitiantang/MultiSaas-UI.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://gitee.com/xueyitiantang/MultiSaas-UI/issues"
  },
  "homepage": "https://gitee.com/xueyitiantang/MultiSaas-UI",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.vue": [
      "eslint --fix",
      "stylelint --fix"
    ],
    "*.{scss,less,styl,html}": [
      "stylelint --fix"
    ]
  },
  "turbo": {
    "npmClient": "pnpm",
    "pipeline": {
      "build": {
        "outputs": [
          "dist/**"
        ],
        "dependsOn": [
          "^build"
        ]
      },
      "clean": {
        "dependsOn": [
          "^clean"
        ]
      },
      "test": {
        "dependsOn": [
          "^test"
        ],
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  },
  "engines": {
    "node": ">=16"
  }
}
